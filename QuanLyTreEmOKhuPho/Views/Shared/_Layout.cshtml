<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>Hệ Thống Quản Lý Trẻ Em Khu Phố</title>

</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <h2>
                    <div class="logo-icon">🏘️</div>
                    <span>Quản Lý Trẻ Em</span>
                </h2>
            </div>
            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="@Url.Action("TrangChu", "Home")" class="nav-link active">
                            <span class="nav-icon">📊</span>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TreEm", "QuanLytreEm")" class="nav-link">
                            <span class="nav-icon">👶</span>
                            <span>Quản lý trẻ em</span>
                        </a>

                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SuKien", "SuKien")" class="nav-link">
                            <span class="nav-icon">🎉</span>
                            <span>Sự kiện</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TinhNguyenVien", "TinhNguyenVien")" class="nav-link">
                            <span class="nav-icon">🤝</span>
                            <span>Tình nguyện viên</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("TreEm", "QuanLytreEm")" class="nav-link">
                            <span class="nav-icon">💝</span>
                            <span>Hỗ trợ & Phúc lợi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("VanDongTreEm", "VanDongTreEm")" class="nav-link">
                            <span class="nav-icon">🎓</span>
                            <span>Vận động trẻ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ManhThuongQuan", "ManhThuongQuan")" class="nav-link">
                            <span class="nav-icon">💰</span>
                            <span>Mạnh thường quân</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("BaoCaoThongKe", "BaoCaoThongKe")" class="nav-link">
                            <span class="nav-icon">📈</span>
                            <span>Báo cáo & Thống kê</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("QuanLyTaiKhoan","QuanLyTaiKhoan")" class="nav-link">
                            <span class="nav-icon">⚙️</span>
                            <span>Quản trị hệ thống</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <div class="header-left">
                    <h1>Quản Lý Sự Kiện</h1>
                    <p>Tổ chức và theo dõi các hoạt động thiếu nhi tại khu phố</p>
                </div>
                <div class="header-right">
                    <div class="user-info">
                        <div class="user-avatar">AD</div>
                        <div>
                            <div style="font-weight: 600; font-size: 14px;">Admin</div>
                            <div style="font-size: 12px; color: var(--gray-600);">Quản trị viên</div>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </main>
    </div>

</body>
</html>